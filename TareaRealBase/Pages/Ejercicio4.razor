@page "/Ejercicio4"
@using System.Collections.Generic;
@using TareaRealBase.Models

<h3>Ejercicio 4</h3>

<table class="table table-dark">
    <thead>
        <tr>
            <th>
                Categoria
            </th>
            <th>
               Cantidad de Producto
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var cus in GetConsulta4())
        {
            <tr>
                <td>@cus.nombre</td>
                <td>@cus.cantidad</td>
                
            </tr>
        }
    </tbody>



</table>


@{     
     List<DataConsulta4> GetConsulta4() => (from e in new northwindContext().Products
                                            group e by e.Category  into r
                                            select new DataConsulta4{
                                                nombre = r.Key, 
                                                cantidad = r.Count()
                                            }).ToList();


}